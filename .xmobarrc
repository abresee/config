-- vim: set syntax=haskell:
Config { 
    font = "xft:DejaVu Sans Mono:pixelsize=11:bold:antialias=true:hinting=true"
    , bgColor = "#333333"
    , fgColor = "grey"
    , position = TopW L 90
    , commands = [ Run MultiCpu ["-t","<total0> <total1> <total2> <total3> <total4> <total5> <total6> <total7>","-L","30","-H","60","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC","-w","3"] 10
                , Run CoreTemp ["-t","<core0>C","-L","30","-H","60","-l","lightblue","-n","gray90","-h","red"] 50
                , Run Memory ["-t","<usedratio>%"] 10
                , Run Network "eth0" ["-w","4","-t","<rx>Kb/s down, <tx>Kb/s up","-H","200","-L","10","-h","#FFB6B0","-l","#CEFFAC","-n","#FFFFCC"] 10
                , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                , Run Com "uname" ["-s","-r"] "" 36000
                , Run StdinReader
    ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "<fc=#B22222>%uname%</fc> | %StdinReader% }{ %coretemp% | %multicpu% | %memory% | %eth0% | <fc=#ee9a00>%date%</fc>"
}
